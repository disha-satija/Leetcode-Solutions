class Solution {
    public int mostWordsFound(String[] sentences) {
       int maxcount = 0;
       int i,j;
       for(i=0 ; i<sentences.length; i++)
       {
         int count = 0;
        for(j=0; j<sentences[i].length(); j++)
        {
            if(sentences[i].charAt(j) == ' ')
            {
                count++;
            }
        }
        int words = count + 1;
        maxcount = Math.max(maxcount, words);
       } 
       return maxcount;
    }
}